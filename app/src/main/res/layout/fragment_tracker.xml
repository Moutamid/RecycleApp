<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0C40B648"
    tools:context=".TrackerFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/logout_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"        android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/power_on"
            />

        <TextView
            android:id="@+id/articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Tracker"
            android:textAllCaps="false"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/kanitbold"
            android:textColor="@color/black"
            android:textSize="35sp" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_3"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="16dp"
        android:scrollbars="vertical" />


    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:background="@color/black"
        android:text="Add Tracker"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15sp"
        android:fontFamily="@font/kanit_medium"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:transitionName="button_tran"
        app:backgroundTint="@color/teal_700"/>


</RelativeLayout>